<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping 
	PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    
    <class name="bancoDeSolucao.Artigo" table="Artigo">
      
      <id name="idArtigo" column="id_artigo">
        <generator class="identity"/>
      </id>
      
    <property name="titulo" column="titulo"/>
    <property name="texto" column="texto"/>
    <property name="tipo" column="tipo"/>
    <property name="subtipo" column="subtipo"/>
	
	</class>
</hibernate-mapping>
