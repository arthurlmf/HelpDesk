/* HTML elements */
body { color:#555; margin:0; padding:0; line-height:1.5em;
  font-family:"Century Gothic", Verdana, arial, helvetica, sans-serif;
}
table { margin:0; padding:.5em; border-collapse:collapse; }
code { font-size:1em; padding:0.25em; background:#fffaf0; color:#444; }
pre { background:#fffaf0; border-left:5px dotted #ddd; line-height:1.3em; margin:0; padding:0.75em;
  color:#444; padding-left:10px; }
blockquote { font-style:italic; }
h1, h2, h3, h4, h5, h6 { font-family:Verdana; padding-bottom:0; margin-bottom:0; margin-top:20px; }
h1 { font-size:1.3em; }
h2 { font-size:1.1em; }
h3, h4, h5, h6 { font-size:1em; }
br { line-height:0.6em; }
a:link { color:#006; }
a:visited { color:#656; }
a:active { color:#ccc; }
a:hover { background:#fea; }

/* Page layout blocks / IDs */
#main, #sidebar-right { margin-left:240px; margin-right:50px; }
#sidebar-left { position:absolute; top:120px; left:20px; width:200px; }
#sidebar-left, #sidebar-right { font-size:90%; line-height:1.2em; }
#content { clear:both; }
#footer { font-size:0.8em; padding-top:2em; text-align:center; }
#help { font-size:0.8em; }
#header { color:#aaa; font-weight:bold; margin-bottom:20px; }
#header a { color:#fff; text-decoration:none; }
#header a:hover { background:inherit; color:#fea; }
#pagelogo { background-color:#5a5a8d; border:1px solid #000000;
  background-image:url(http://getahead.org/images/head-back.png);
  background-repeat:no-repeat; background-position:right;
  padding:1.0em 15px 0.20em 15px;
}
#pagelogo a { font-size:20pt; font-family:verdana, arial, sans-serif; }
#pagelogo a:hover { background:#5a5a8d; }
#pagelinks { background-color:#7272a2; border:1px solid #000000;
  border-top:0; padding:5px; font-size:7pt; line-height:1.8em;
  font-family:verdana, arial, sans-serif; height:20px;
}
#pagelinks a:hover { background:#7272a2; }
.navlinks { float:right; padding:0; }
.breadcrumb { padding:0; margin:0 }
#search-form { display:inline; padding:0; margin:0; }
#search .form-text { border:1px solid #369; font-size:1.2em; width:6em; height:1.2em; padding:0; margin:0; }
#search .form-submit { border:1px solid #369; font-size:1em; height:1.5em; padding:0; margin:0; }

/* Common declarations for child classes of node, comment, block, box etc */
.book-navigation .page-links { display:none; }
.book-navigation ul.menu { border-top:none; padding-top:30px; padding-left:10px; }
.book-navigation { font-size:80%; line-height:1.3em; }
.links { font-size:75%; line-height:1.25em; width:150px; border:0; float:right; margin-bottom:50px; }
.links a { text-decoration:none; }
#navlist { display:inline; float:none; border:0; }
#navlist li { display:inline; }

.title { margin:0 0 .25em 0; }
.content { margin:0 0 .5em 0; }
.messages { padding:0.3em; margin:0.5em 0em 0.5em 0em; }
.status { border:1px solid #3a3; color:#3a3; }
.error, form-item input.error { border:1px solid red; color:red; }
.node .submitted { color:#7c7c7c; font-size:0.9em; float:left; padding:0.5em 0em 0.5em 1em; }
.node .taxonomy { color:#7c7c7c; font-size:0.9em; float:right; }
.node .content { clear:both; padding-left:1em; }
.node .links { padding:1em; }
.comment { border:solid 1px #777; margin:0.5em 0 0.5em 0; padding:0.5em; }
.block { margin-bottom:10px; font-size:0.9em; }
.block .content { margin:0; padding:5px; }
.block h2.title { margin:0; }

/* Module specific styles */
.item-list ul li { list-style-image:url(bullet.png); }
.path, .path a, .path a:visited { color:#888; }
.calendar .day-today { background-color:#ccc; }
.calendar .day-selected { background-color:#bbb; }
.calendar .header-month { background-color:#ddd; }
 .header-week { background-color:#ccc; }
.calendar .day-blank { background-color:#ddd; }
.calendar .day-link a { color:#000; }
.calendar .row-week { color:#aaa; }
.form-item textarea { font-size:1em; }
#aggregator .feed-source { border:1px solid gray; padding:1em; }

/* Overrides for things provided by drupal.css */
#main .node-unpublished { background-color:inherit; border-right:2px dotted #FF8888; }

/* Content specific classes */
.codecomment { color:#383; }
.codehighlight { color:#F00; }
.quote { padding-left:20px; background-image:url(http://getahead.ltd.uk/images/quote-background.gif);
  background-repeat:no-repeat; background-position:top left;
}
table.documentation tr { border-bottom:1px solid #DDD; }
table.documentation .note { font-weight:normal; font-size:80%; padding-left:5px; }
table.documentation th { padding-top:20px; }

table.form th { text-align:right; border-bottom:0; }


